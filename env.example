# =============================================================================
# Mage AI Project Environment Variables
# =============================================================================
# Copy this file to .env and update the values according to your setup
# cp env.example .env

# =============================================================================
# Container Configuration
# =============================================================================
CONTAINER_NAME=mageai_project

# =============================================================================
# Mage AI Application Settings
# =============================================================================
PROJECT_NAME=analytics_project
MAGE_PORT=6789

# =============================================================================
# Database Configuration
# =============================================================================
MAGE_DB_NAME=mage_db
MAGE_DB_USER=mage_user
MAGE_DB_PASSWORD=your_secure_password_here
MAGE_DB_SCHEMA=mage
MAGE_DB_PORT=5432

# Database connection URL (PostgreSQL)
MAGE_DATABASE_CONNECTION_URL=postgresql://${MAGE_DB_USER}:${MAGE_DB_PASSWORD}@mage_db:5432/${MAGE_DB_NAME}

# =============================================================================
# Authentication & Security
# =============================================================================
# Default admin user credentials
DEFAULT_OWNER_USERNAME=admin
DEFAULT_OWNER_EMAIL=admin@example.com
DEFAULT_OWNER_PASSWORD=your_admin_password_here

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random

# Authentication settings
REQUIRE_USER_AUTHENTICATION=true
DISABLE_NOTEBOOK_EDIT_ACCESS=false

# =============================================================================
# Performance & Concurrency
# =============================================================================
# Concurrency limits for pipeline and block execution
CONCURRENCY_CONFIG_BLOCK_RUN_LIMIT=10
CONCURRENCY_CONFIG_PIPELINE_RUN_LIMIT=5

# File descriptor limit
ULIMIT_NO_FILE=65536

# =============================================================================
# Optional: External Services (uncomment and configure if needed)
# =============================================================================
# AWS Configuration
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1

# Google Cloud Configuration
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Azure Configuration
# AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string

# =============================================================================
# Development Settings (optional)
# =============================================================================
# Enable debug mode
# DEBUG=true

# Custom log level
# LOG_LEVEL=INFO 